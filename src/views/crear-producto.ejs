<%- include("partials/header") %>

<%- include("partials/navbar") %>
<body>
<main>
    <form action="edit-product" enctype="multipart/form-data">
        <div class="container-edicion-producto">
            <input type="text" placeholder="Nombre del producto">
            <textarea name="descripcion" placeholder="DescripciÃ³n" id="descripcion" cols="30" rows="10"></textarea>
            <input type="file" accept=".jpg, .jpeg, .png">
            <select name="categoria" id="categoria">
                <option value="">Seleccione uno</option>
                <option value="Motherboard">Motherboard</option>
                <option value="Procesadores">Procesadores</option>
                <option value="Memorias">Memorias</option>
                <option value="Fuentes">Fuentes</option>
                <option value="Gabinetes">Gabinetes</option>
                <option value="Almacenamiento">Almacenamiento</option>
                <option value="Placa de video">Placa de video</option>
                <option value="Periferico">Periferico</option>
            </select>
            <select name="marca" id="marca">
                <option value="">Seleccione uno</option>
                <option value="amd">AMD</option>
                <option value="intel">INTEL</option>
                <option value="sentey">Sentey</option>
                <option value="gigabyte">Gigabyte</option>
                <option value="asus">Asus</option>
                <option value="msi">MSI</option>
                <option value="corsair">Corsair</option>
                <option value="hyperx">HyperX</option>
            </select>
            <input type="text" placeholder="Modelo">
            <select name="status" id="status">
                <option value="">Seleccione uno</option>
                <option value="destacado">Destacados</option>
                <option value="ofertas">Ofertas</option>
            </select>
            <select name="family" id="families">
                <option value="">Seleccione Uno</option>
                <option value="intel">Intel</option>
                <option value="amd">AMD</option>
            </select>
            <input type="text" placeholder="Garantia" name="warranty">
            <input type="text" placeholder="Modelo" name="model">
            <input type="number" placeholder="Precio" name="price">
            <div class="botones">
                <div class="button-confirmar">
                    <button><a href="/">Confirmar</a></button>
                </div>
                <div class="button-borrar">
                    <button type="reset" id="clean">Limpiar</button>
                </div>
            </div>
        </div>
    </form>
</main>


<%- include("partials/footer") %>
</body>
</html>